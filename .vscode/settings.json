{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/*.o": true,
		"**/*.exe": true,
	},
	"testMate.cpp.debug.configTemplate": null,
	"testMate.cpp.test.advancedExecutables": [
		{
		  "pattern": "*_test*",
		  "cwd": "${workspaceFolder}",
		  "runTask": { "before": ["build test"] },
		  "doctest": { "prependTestRunningArgs": [ "--isTesting", "true"]}
		}
	  ]
}